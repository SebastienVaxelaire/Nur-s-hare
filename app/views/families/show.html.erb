<div class="container mt-4">

  <% if @family.name == nil %>

    <h2>Tu n'as pas encore ajouter d'informations sur ta famille, il est temps de nous en dire un peu plus !</h2>

    <%= render 'form', family: @family %>

  <% end %>


  <% if @family.name != nil %>

    <h2>Famille <%= @family.name %></h2>

    <p><%= @family.description %></p>

  <% end %>



  <div class="nur-card">
      <%= link_to "<i class='fa-solid fa-plus'></i>".html_safe, new_family_child_path(@family) %>

    <div class="d-flex justify-content-around">

      <% @children.each do |child| %>

      <div class="child">
        <% if child.photo.attached? %>
          <%= cl_image_tag child.photo.key, crop: :fill, class: "avatar-extra-large"%>
        <% end  %>
        <p><%= child.name %></p>
        <%= link_to "Edit", edit_family_child_path(@family, child) %> |
        <%= link_to "<i class='fa-solid fa-trash-can' style='color: #ff2600;'></i>".html_safe,
          family_child_path(@family, child),
          class: "text-decoration-none link-dark",
          data: {turbo_method: :delete, turbo_confirm: "Êtes-vous sûr de supprimer ?"} %>
      </div>
          <% end %>
   </div>


</div>
