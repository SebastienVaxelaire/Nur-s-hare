<div class="navbar navbar-expand-sm navbar-light">
  <div class="container-fluid">
    <%= link_to root_path do %>
      <i class="fa-solid fa-people-roof" style="color: #000000;"></i>
    <% end %>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item active me-3">
            <%= link_to "Accueil", root_path, class: "nav-link" %>
          </li>
          <li class="nav-item active me-3">
            <%= link_to "Ma famille", family_path(current_user.family), class: "nav-link" %>
          </li>
          <li class="nav-item active me-3">
            <%= link_to "Tous les groupes", groups_path(), class: "nav-link" %>
          </li>
          <li class="nav-item active me-3">
            <%= link_to "Créer un groupe", new_family_group_path(current_user.family), class: "nav-link" %>
          </li>
          <li class="nav-item me-3">
            <%= link_to "Mes échanges", "#", class: "nav-link" %>
          </li>
          <li class="nav-item dropdown">
            <a href="#" class="avatar" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <%# <%= image_tag "https://media.istockphoto.com/id/1082467846/fr/photo/sourire-des-parents-avec-deux-enfants.jpg?s=612x612&w=0&k=20&c=p8WbeqRJKsjAXbAYVT90X82s2UsobtdHG3q8F32XW9o=", class: "avatar", alt: "dropdown menu" %>
              <% if current_user.family.photos[0] %>
                <%= image_tag current_user.family.photos[0], class: "avatar", alt: "dropdown menu" %>
              <% else %>
                <%= image_tag "https://images.unsplash.com/photo-1491013516836-7db643ee125a?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1325&q=80", class: "avatar", alt: "dropdown menu" %>
              <% end %>
            </a>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Ma famille", family_path(current_user.family), class: "dropdown-item" %>
              <%# <%= link_to "Another action", "#", class: "dropdown-item" %>
              <%= link_to "Se déconnecter", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
